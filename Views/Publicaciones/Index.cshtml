@model IEnumerable<RedSocial.Models.Publicacion>

@{
    ViewData["Title"] = "Index";

}
<h1 class="mimuro">Mis Publicaciones</h1>
<p>
<form>
    <input type="submit" asp-action="Create" value="Publicar" class="btn btn-primary" />
</form>
<hr />
</p>
<div class="container">
    @{
        int id = 0;
        string sId = "";
        int i = 99;
        foreach (var item in Model)
        {
            <div class="row rowCenter">

                <div class="col-12">
                    @{
                        sId = "carousel" + id;
                    }
                    <div id="@sId" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            @{
                                i = 0;
                            }
                            @foreach (var imagen in item.Imagen)
                            {
                                string cClass = "";
                                if (i == 0)
                                {
                                    cClass = "carousel-item active";
                                }
                                else
                                {
                                    cClass = "carousel-item";
                                }
                                <div class="@cClass">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-8 mx-auto">
                                                <img class="d-block w-100" src="@imagen.FullPath" alt="@imagen.FullPath">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                i++;
                            }
                        </div>
                        @{
                            if (item.Imagen.Count > 1)
                            {
                                <div class="row">
                                    <div class="col-6 mx-auto">
                                        <a class="carousel-control-prev" href="#@sId" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 mx-auto">
                                        <a class="carousel-control-next" href="#@sId" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 d-flex justify-content-center mx-auto">
                    <a asp-action="Edit" asp-route-id="@item.PublicacionId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.PublicacionId">Borrar</a>
                </div>
                <div class="col-6 mx-auto">
                    <h5>@item.Fecha</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mx-auto">
                    <h3>@item.Texto</h3>
                </div>
            </div>
            <hr />
            id++;
        }
    }
</div>



